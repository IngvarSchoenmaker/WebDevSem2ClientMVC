@model WebDevSem2ClientMVC.Models.LobbyTable
@{
    ViewData["Title"] = "Maak tafel";
}
<form asp-action="CreateTable" method="post">
    <div class="form-group">
        <label asp-for="TableName" class="control-label"></label>
        <input asp-for="TableName" class="form-control" />
        <span asp-validation-for="TableName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfPlayers" class="control-label"></label>
        <input asp-for="NumberOfPlayers" class="form-control" />
        <span asp-validation-for="NumberOfPlayers" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Maak tafel</button>
</form>

