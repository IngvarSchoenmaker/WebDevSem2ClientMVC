@model IEnumerable<WebDevSem2ClientMVC.Models.DeveloperProfile>
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Nieuwe developer</a>
    </p>
}
<div class="table-responsive">
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skills)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PictureURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Skills)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discription)
            </td>
            <td>
                <img src="@Url.Content(item.PictureURL)" style="max-width: 60px; max-height: 60px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DeveloperProfileId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DeveloperProfileId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DeveloperProfileId">Delete</a>
                </td>
                }
        </tr>
}
    </tbody>
</table>
</div>
